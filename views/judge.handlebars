<nav>Judges Page</nav>

    <div class="container">
        
        <div id="id-div">
            <form>
                <div class="form-group">
                  <label for="judge-number">Judge Number</label>
                  <input type="email" class="form-control" id="judge-number" placeholder="e.g. John Smith">
                  <label for="candidate-number">Candidate Number</label>
                  <input type="email" class="form-control" id="candidate-number" placeholder="e.g. 20">              
                </div>
            </form>
        </div>

        <div id="music-div">
            <img src="/assets/img/excerpt.jpg">
        </div>

        <div id="comments-div">
            <div class="form-group">
                <label for="comments">Comments</label>
                <textarea class="form-control" id="comments" rows="3"></textarea>
            </div>
        </div>

        <div id="scores-div">
            <h1>Scores</h1>
            <p>Intonation:</p>
            <input type="range" min="1" max="100" value="50" class="slider" id="intonation">
            <p>Rhythm:</p>
            <input type="range" min="1" max="100" value="50" class="slider" id="rhythm">
            <p>Tone:</p>
            <input type="range" min="1" max="100" value="50" class="slider" id="tone">
            <p>Musicality:</p>
            <input type="range" min="1" max="100" value="50" class="slider" id="musicality">
        </div>

        <div id="voting-div">
            <h1>Vote</h1>
            <input type="radio" name="vote" value="true"><label>Yes</label>
            <input type="radio" name="vote" value="false"><label>No</label>
        </div>

        <div id="button-div">
            <button type="submit" class="btn btn-primary btn-lg btn-block" id="submit"><i class="fa fa-check-circle" aria-hidden="true"></i>Submit</button>
        </div>

    </div>
    
    <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
    <script type="text/javascript" src="/js/judge.js"></script>