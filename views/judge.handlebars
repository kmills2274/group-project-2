<!-- ======= Judge Score Section ======= -->
<section id="judge-score">
  <div class="container wow fadeInUp">
    <div class="row">
      <div class="col-md-12">
        <h3 class="section-title">Score</h3>
        <div class="section-title-divider"></div>
        <h3 class="section-description">Adjust the sliding scales to score each candidate accordingly:</h3>
      </div>
    </div>

    <div id="scores-div">

      <div class="slidecontainer">

        <p style="color: black;font-size:30px;font-weight: bold;">Intonation:</p>
        <input type="range" min="1" max="100" value="50" class="slider" id="intonation">
        <p style="color: black;font-size:20px;">Value: <span id="intonation-slider"></span></p>

        <p style="color: black;font-size:30px;font-weight: bold;">Rhythm:</p>
        <input type="range" min="1" max="100" value="50" class="slider" id="rhythm">
        <p style="color: black;font-size:20px;">Value: <span id="rhythm-slider"></span></p>

        <p style="color: black;font-size:30px;font-weight: bold;">Tone:</p>
        <input type="range" min="1" max="100" value="50" class="slider" id="tone">
        <p style="color: black;font-size:20px;">Value: <span id="tone-slider"></span></p>

        <p style="color: black;font-size:30px;font-weight: bold;">Musicality:</p>
        <input type="range" min="1" max="100" value="50" class="slider" id="musicality">
        <p style="color: black;font-size:20px;">Value: <span id="musicality-slider"></span></p>

      </div>
    </div>
  </div>

</section><!-- End Judge Score Section -->

